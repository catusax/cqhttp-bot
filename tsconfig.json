{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "jsx": "preserve",
        "noUnusedLocals": true, 
        "noUnusedParameters": true, 
        "strict": true ,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "strictBindCallApply": true,
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
    },
    "moduleResolution": "node", //决定如何处理模块。
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "deno_dist/",
        "src/**/*.deno.ts",
        "src/**/*.deno.tsx",
    ],
    "include": ["src/**/*"]
}